<div class="card">
  <div class="card-body">
    <div class="card-text">

      <div class="form-group">
        <label class="label">送信元アドレス</label>
        <input
          class="form-control"
          id="form-input-sender_email"
          name="sender_email"
          placeholder="..."
          value="">
      </div><!-- -->
      <div class="form-group">
        <label class="label">送信元表示名</label>
        <input
          class="form-control"
          id="form-input-sender_display_name"
          name="sender_display_name"
          placeholder="..."
          value="">
      </div>

      <div class="form-group">
        <label>件名 (差し込み可)</label>
        <input class="form-control" name="mail_subject"
          placeholder="..."
          value="">
      </div>

      <div class="form-group">
        <label>形式</label>
        <select class="custom-select" name="mail_body_type">
          <option value="text">Plain Text</option>
          <option value="html">HTML</option>
        </select>
      </div>

      <div class="form-group">
        <label>本文 (差し込み可)</label>
        <textarea
          class="form-control"
          name="mail_body"
          style="min-height: 240px;"
          ></textarea>
      </div><!-- form-group -->
    </div>
  </div>
</div><!-- card -->
